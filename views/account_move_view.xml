<odoo>
  <record id="view_move_form_edicion_factura" model="ir.ui.view">
    <field name="name">account.move.form.edicion.factura</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <!-- Campo invisible en el primer grupo -->
      <xpath expr="//group" position="inside">
        <field name="is_edicion_factura_user" invisible="1"/>
      </xpath>

      <!-- Campos a bloquear -->
      <xpath expr="//field[@name='name']" position="attributes">
          <attribute name="attrs">{'readonly': [('is_edicion_factura_user', '=', False)]}</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_date']" position="attributes">
          <attribute name="attrs">{'readonly': [('is_edicion_factura_user', '=', False)]}</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']" position="attributes">
          <attribute name="attrs">{'readonly': [('is_edicion_factura_user', '=', False)]}</attribute>
      </xpath>
      <xpath expr="//field[@name='partner_id']" position="attributes">
          <attribute name="attrs">{'readonly': [('is_edicion_factura_user', '=', False)]}</attribute>
      </xpath>
      <xpath expr="//field[@name='currency_id']" position="attributes">
          <attribute name="attrs">{'readonly': [('is_edicion_factura_user', '=', False)]}</attribute>
      </xpath>

    </field>
  </record>
</odoo>